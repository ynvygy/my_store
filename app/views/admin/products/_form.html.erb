<%= form_for(["admin", @product]) do |f| %>
  <% if @product.errors.any? %>
    <h2><%= pluralize(product.errors.count, "error")%> stopped this category from being saved"</h2>
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li> msg </li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.map{|category|[category.name, category.id]} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>