<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">My Basic Store</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <%= form_tag(category_products_path(@category), :method => "get", id: "search-form", class: "navbar-form navbar-left") do %>
        <div class="form-group">
        <%= text_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
        </div>
        <%= submit_tag "Search", :class => 'btn btn-default',:name => nil%>
      <% end %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Categories and Products", categories_path%></li>
        <li><%= link_to "You have #{itemsnumber} items in your cart", cart_path(cartpage)%></li>
